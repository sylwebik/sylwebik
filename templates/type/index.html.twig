{% extends 'base.html.twig' %}

{% block title %}Typy{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Typy ✅</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td>{{ type.id }}</td>
                    <td>{{ type.name }}</td>
                    <td>
                        <a href="{{ path('type_edit', {'id': type.id}) }}">Edytuj</a>
                        <a href="{{ path('type_info', {'id': type.id}) }}">Pokaż</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Nie znaleziono typów!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </br>
        <a href="{{ path('type_new') }}">Dodaj typ</a>
        </br>
        <a href="{{ path('index') }}">Wróć</a>
    </div>
{% endblock %}
