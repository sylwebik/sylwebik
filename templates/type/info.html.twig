{% extends 'base.html.twig' %}

{% block title %}Informacje o typie{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Informacje o typie ✅</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ type.name }}</td>
            </tr>
            </tbody>
        </table>
        {{ include('type/form/_delete_form.html.twig', {'button_label': 'Usuń typ'}) }}
        </br>
        <a href="{{ path('type_edit', {'id': type.id}) }}">Edytuj</a>
        </br>
        <a href="{{ path('type_index') }}">Wróć</a>
    </div>
{% endblock %}
